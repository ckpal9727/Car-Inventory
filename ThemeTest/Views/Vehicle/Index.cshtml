

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Vehicles List</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
</head>
<body>
    <h1>Vehicles</h1>
    <a asp-action="Create">Create New Vehicle</a>
    <table id="vehiclesTable" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>Make</th>
                <th>Model</th>
                <th>Year</th>
                <th>Category</th>
                <th>Price Per Day</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td>@vehicle.CarId</td>
                    <td>@vehicle.Make</td>
                    <td>@vehicle.Model</td>
                    <td>@vehicle.Year</td>
                    <td>@vehicle.Category</td>
                    <td>@vehicle.PricePerDay.ToString("C")</td>
                    <td>@vehicle.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@vehicle.CarId">Edit</a>
                        <form asp-action="Delete" asp-route-id="@vehicle.CarId" method="post" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#vehiclesTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true
            });
        });
    </script>
</body>
</html>
